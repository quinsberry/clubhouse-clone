{
    "compilerOptions": {
        "outDir": "../",
        "target": "es6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@api/*": ["api/*"],
            "@components/*": ["components/*"],
            "@core/*": ["core/*"],
            "@generated/*": ["generated/*"],
            "@hooks/*": ["hooks/*"],
            "@pages/*": ["pages/*"],
            "@services/*": ["services/*"],
            "@store/*": ["store/*"],
            "@styles/*": ["styles/*"],
            "@tps/*": ["types/*"],
            "@utils/*": ["utils/*"],
            "@server/*": ["server/*"],
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "server/types.d.ts"],
    "exclude": ["node_modules"]
}
